@model V_APP.Models.Product
@{
	Layout = "_Layout2";
}
<div class="login_page_iiner302">
	<div class="row">
		<div class="col-lg-12">
			<div class="login_page_inner">
				<form asp-action="AddUpdateProduct" enctype="multipart/form-data" method="post">
					<input type="hidden" asp-for="Id" />
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Name">Product Name</label>
								<input asp-for="Name" type="text" class="form-control" required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="CategoryId">Product Category</label>
								<input asp-for="CategoryId" type="text" class="form-control" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Image">Product Image(s)</label>
								<input id="Img" name="Img" type="file" class="form-control" multiple required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="ShortDescription">Short Descriptione</label>
								<input asp-for="ShortDescription" type="text" class="form-control" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Quantity">Product Quantity</label>
								<input asp-for="Quantity" type="number" class="form-control" required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Price">Price</label>
								<input asp-for="Price" type="number" class="form-control" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="DeliveryDays">Delivery Days</label>
								<input asp-for="DeliveryDays" type="number" class="form-control" required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="DeliveryCharges">Delivery Charges</label>
								<input asp-for="DeliveryCharges" type="number" class="form-control" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group">
								<label asp-for="LongDescription">Long Description</label>
								<textarea asp-for="LongDescription" type="text" class="form-control" required></textarea>
							</div>
						</div>
					</div>
					<div class="form-group">
						<label asp-for="Status" class="control-label"></label>
						@*<input asp-for="Status" class="form-control" />*@
						<div class="form-check">
							<input class="form-check-input" type="radio" asp-for="Status" id="flexRadioDefault1" value="1">
							<label class="form-check-label" asp-for="Status">
								Active
							</label>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="radio" asp-for="Status" id="flexRadioDefault2" value="0">
							<label class="form-check-label" asp-for="Status">
								InActive
							</label>
						</div>
						<span asp-validation-for="Status" class="text-danger"></span>
					</div>
					<button type="submit" class="btn">Submit</button>
				</form>

			</div>
		</div>
	</div>	
</div>