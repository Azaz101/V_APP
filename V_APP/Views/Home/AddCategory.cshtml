@model V_APP.Models.Category
@{
	Layout = "_Layout2";
}
<div class="login_page_iiner302">
	<div class="row">
		<div class="col-lg-12">
			<div class="login_page_inner">
				<form asp-action="AddCategory" enctype="multipart/form-data" method="post">
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Name">Category Name</label>
								<input asp-for="Name" type="text" class="form-control" required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="TopCategoryId">Top Category</label>
								<input asp-for="TopCategoryId" type="text" class="form-control" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Image">Category Image</label>
								<input id="img" name="img" type="file" class="form-control" required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Description">Descriptione</label>
								<input asp-for="Description" type="text" class="form-control" required />
							</div>
						</div>
					</div>
					<div class="form-group">
						<label asp-for="Status" class="control-label"></label>
						<div class="form-check">
							<input class="form-check-input" type="radio" asp-for="Status" id="flexRadioDefault1" value="1">
							<label class="form-check-label" asp-for="Status">
								Active
							</label>
						</div>
						<div class="form-check">
							<input class="form-check-input" type="radio" asp-for="Status" id="flexRadioDefault2" value="0">
							<label class="form-check-label" asp-for="Status">
								InActive
							</label>
						</div>
						<span asp-validation-for="Status" class="text-danger"></span>
					</div>
					<button type="submit" class="btn">Submit</button>
				</form>

			</div>
		</div>
	</div>
</div>

