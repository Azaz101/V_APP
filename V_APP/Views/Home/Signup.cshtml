												<select asp-for="Gender" class="form-control" id="exampleFormControlSelect1">
													<option value="Male">Male</option>
													<option value="Female">Female</option>
													<option value="Uni Sex">Uni Sex</option>
												</select>
											</div>
								    	</div>
								    	<div class="col-lg-6">
								    		<div class="form-group">
										        <label asp-for="PhoneNo">Mobile Number</label>
												<input asp-for="PhoneNo" type="number" class="form-control" />
										    </div>
								    	</div>
								    </div>
								    <div class="row">
								    	<div class="col-lg-6">
								    		<div class="form-group">
										        <label asp-for="Cnic">Cnic</label>
										        <input asp-for="Cnic" type="number" class="form-control" />
										    </div>
								    	</div>
								    	<div class="col-lg-6">
								    		<div class="form-group">
										        <label asp-for="Address">Current Address</label>
										        <input asp-for="Address" type="text" class="form-control" />
										    </div>
								    	</div>
								    </div>
