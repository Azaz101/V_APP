@model V_APP.DTOs.SignupCustomer
@{
	Layout = "_Layout2";
}
<div class="login_page_iiner302">
	<div class="row">
	    <div class="col-lg-12">
	    	<div class="login_page_inner">
	    		<form action="SignupCustomer" method="post">
	    			<div class="row">
	    				<div class="col-lg-6">
	    					<div class="form-group">
								<label asp-for="FirstName">First Name</label>
							<input asp-for="FirstName" type="text" class="form-control" required />
							</div>
	    				</div>
	    				<div class="col-lg-6">
	    					<div class="form-group">
								<label asp-for="LastName">Last Name</label>
							<input asp-for="LastName" type="text" class="form-control" required />
							</div>
	    				</div>
	    			</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Gender">Gender</label>
							<select asp-for="Gender" class="form-control" id="exampleFormControlSelect1" required>
									<option disabled selected>Select an option...</option>
									<option value="Male">Male</option>
									<option value="Female">Female</option>
									<option value="Uni Sex">Uni Sex</option>
								</select>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="PhoneNumber">Mobile Number</label>
							<input asp-for="PhoneNumber" type="number" class="form-control" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="City">City</label>
							<Select asp-for="City" type="number" class="form-control" required>
								<option value="Sialkot">Sialkot</option>
								<option value=""></option>
								<option value=""></option>
								<option value=""></option>
								</Select>
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Address">Current Address</label>
							<input asp-for="Address" type="text" class="form-control" required />
							</div>
						</div>
					</div>
					@*<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label for="exampleInputEmail1">Shop Address</label>
								<input type="number" class="form-control" />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label for="exampleFormControlSelect1">Category</label>
								<select class="form-control" id="exampleFormControlSelect1">
									<option>Lifestyle</option>
									<option>Food</option>
									<option>News</option>
									<option>Trending</option>
								</select>
							</div>
						</div>
					</div>*@
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Email">Email</label>
							<input asp-for="Email" type="text" class="form-control" required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Dob">Date of Birth</label>
							<input asp-for="Dob" type="date" class="form-control" id="exampleInputPassword1" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Username">User Name</label>
							<input asp-for="Username" type="text" class="form-control" required />
							</div>
						</div>
						<div class="col-lg-6">
							<div class="form-group">
								<label asp-for="Password">Password</label>
							<input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" required />
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="form-group form-check">
							<input type="checkbox" class="form-check-input" id="exampleCheck1" required>
								<label class="form-check-label" for="exampleCheck1">Terms And Conditions</label>
							</div>
						</div>
					</div>
								    
								    
								    
									
								    
					<button type="submit" class="btn">Submit</button>
				</form>

	    	</div>
	    </div>
	</div>
	<div class="mt-4">
		<p>Already have an account.</p>
