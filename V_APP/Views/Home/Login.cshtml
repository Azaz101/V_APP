@model V_APP.DTOs.LoginModel
@{
	Layout = "_Layout2";
	var success = TempData["Success"];
	var invalid = ViewBag.Error;
}
<div class="login_page_iiner302">
	<div class="row">
	    <div class="col-lg-12">
	    	<div class="login_page_inner">
			@if (invalid != null)
			{
				<h5 class="text-center alert alert-danger">@ViewBag.Error</h5>
			}

			@if (success != null)
			{
				<h5 class="text-center alert alert-success">@TempData["Success"]</h5>
			}
			<form asp-action="Login" method="post">
					<div class="form-group">
						<label asp-for="Username">User Name</label>
					<input asp-for="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required />
					</div>
					<div class="form-group">
						<label asp-for="Password">Password</label>
					<input asp-for="Password" class="form-control" id="exampleInputPassword1" required />
					</div>
					<button type="submit" class="btn">Submit</button>
				</form>

	    	</div>
	    </div>
	</div>
	<div class="mt-4">
		<p>Don't have account. Signup as</p>
		<div class="row mt-3">
			<div class="col-lg-12 title_section">
				<ul>
					<li><a asp-action="SignupSeller">Seller</a></li>
					<li><a asp-action="SignupCustomer">Customer</a></li>
				</ul>
			</div>
		</div>
	</div>
	<div class="row">
	    <div class="col-lg-12 social_menu">
	    	<h1>or</h1>
	    	<ul>
		    	<li><a href="" target="_blank"><span><i class="fab fa-instagram"></i></span></a></li>
				<li><a href="" target="_blank"><span><i class="fab fa-facebook-square"></i></span></a></li>
				<li><a href="" target="_blank"><span><i class="fab fa-twitter"></i></span></a></li>
				<li><a href="" target="_blank"><span><i class="fab fa-linkedin-in"></i></span></a></li>
			</ul>
	    </div>
	</div>
</div>

